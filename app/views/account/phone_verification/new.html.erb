

<div class="container px-0 pb-3">

  <div class="row no-gutters py-2 ">
    <div class="col">
      <%= form_with(scope: "user", url: account.phone_verification_create_path, local: true) do |form| %>
        <%= form.hidden_field :user_action, value: "create" %>

        <div id="phone_details" class='form-group'>
          <div class="form-group">
            <%= form.label "手机号:", class: 'control-label', id: 'verify_phone_label' %>
            <%= form.text_field :phone, id: 'phone' ,:class => "form-control", placeholder: '请输入您的手机号' %>
            <small id="passwordHelpBlock" class="form-text text-muted col-12">
              请输入11位数字手机号
            </small>
            <%= form.label "", class: 'control-label invalid-feedback', id: 'error_mobile_label', style:"display:none;" %>
          </div>
        </div>

        <div id="password" class='form-group'>
          <%= form.label "密码" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= form.password_field :password, id: "password", :class => "form-control", autocomplete: "new-password" %>
        </div>

        <div id="password_confirmation" class='form-group'>
          <%= form.label "确认密码" %><br />
          <%= form.password_field :password_confirmation, id: "password_confirmation", :class => "form-control", autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= link_to '发送验证码', "#", :id=> 'send_verification_code', :class=> 'btn btn-sm btn-success' %>
          <small id="count-down-text" class="text-muted"></small>
        </div>


        <div id="verification_details" class='form-group' style="display:none;">
          <%= form.label "验证码:", id: 'verify_code_label', class: 'control-label', style:"" %>
          <%= form.text_field :verification_code, placeholder: '请输入验证码', id: 'verification_code' ,:class => "form-control", :alt=> "999999" %>
          <%= form.label "请输入6位数字验证码", class: 'control-label', id: 'error_code_label', style:"display:none;" %>
          <%= form.label "", class: 'control-label', id: 'success_code_label' %>
        </div>

        <div id="submit_verification_btn" class="actions"  style="display:none;">
          <%= form.submit "注册", class: "btn btn-primary"%>
        </div>
      <% end %>
    </div>


  </div>

</div>
